<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/UserScripts/common.js"></script>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Bike portal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Bikes", "Index", "BikeListing", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Add bike", "AddBike", "BikeListing", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Login", "Index", "Login", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Register", "Index", "Register", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Shopping list", "Index", "ShoppingList", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Orders", "Index", "OrderList", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Admin", "Index", "AdminView", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BikePortal - Ács Dávid</p>
        </footer>
    </div>
    
    <script src="/Scripts/jquery.signalR-2.2.3.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>
    <!--Reference the added_article script. -->
    <script src="/Scripts/UserScripts/added_article.js"></script>
    <script src="/Scripts/notify.js"></script>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
